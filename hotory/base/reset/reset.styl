// Main
html
body
p
ol
ul
li
dl
dt
dd
blockquote
figure
fieldset
legend
textarea
pre
iframe
hr
h1
h2
h3
h4
h5
h6
    margin 0
    padding 0

a
    text-decoration none
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)

html
    box-sizing border-box

*
*:before
*:after
    box-sizing inherit

// Media
img
embed
iframe
object
audio
video
    max-width 100%
    height auto

iframe
    border none

img
    max-width 100%
    height auto
    color transparent
    font-size 0

// Table
table
    border-spacing 0
    border-collapse collapse

td
th
    padding 0
    text-align left

// Typography
h1
h2
h3
h4
h5
h6
    font-weight normal
    font-size 100%

ul
    list-style none

// Controllers
button
input
select
textarea
    margin 0
    outline none
    border none
    -moz-appearance none
    -webkit-appearance none
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)

input[type=button]
input[type=submit]
input[type=reset]
a[role=button]
button
    padding 0
    border none
    background-color transparent
    color inherit
    font inherit
    cursor pointer
