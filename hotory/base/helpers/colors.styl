// Transparent
.has-background\\:transparent
.hover\\:has-background\\:transparent:hover
    background-color transparent

.has-color\\::transparent
.hover\\:has-color\\:transparent:hover
    color transparent

// White
.has-background\\:white
.hover\\:has-background\\:white:hover
    background-color $white

.has-color\\::white
.hover\\:has-color\\:white:hover
    color $white

